<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.junzi.friendzone.MapsActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.junzi.friendzone.MapsActivity"
        tools:layout="@layout/activity_maps" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/lstContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Les contacts"
            android:onClick="listeContact"/>
        <Button
            android:id="@+id/addAmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter un ami"
            android:onClick="addAmi"/>

        <Button
            android:id="@+id/profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:onClick="Profil"/>

    </LinearLayout>

</RelativeLayout>