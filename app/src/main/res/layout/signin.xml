<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.junzi.friendzone.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Champs de saisie du Pseudo -->
    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/pseudo"
        android:hint="@string/pseudo"
        android:paddingLeft="10dp"
        android:textColorHint="#000"
        android:textSize="22dp"/>

    <!-- Champs de saisie du Numéro de Téléphone -->
    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/phone"
        android:hint="@string/phone"
        android:paddingLeft="10dp"
        android:textColorHint="#000"
        android:textSize="22dp"
        android:layout_marginTop="20dp"
        android:inputType="phone"/>

    <!-- Champs de saisie de l'Email -->
    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/mail"
        android:hint="@string/email"
        android:paddingLeft="10dp"
        android:textColorHint="#000"
        android:textSize="22dp"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"/>

    <!-- Champs de saisie du Mot de Passe -->
    <EditText
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:id="@+id/password"
        android:hint="@string/password"
        android:paddingLeft="10dp"
        android:textColorHint="#000"
        android:textSize="22dp"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"/>

    <!-- Bouton pour valider le formulaire -->
    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/signinBtn"
        android:text="@string/signinBtn"
        android:layout_marginTop="30dp"
        android:onClick="submit"/>
</LinearLayout>